{
	"rust-analyzer.format": true,
	"java.format.enabled": true,
	"rust-analyzer.enableCargoWatchOnStartup":"enabled",
	"languageserver": {
		"clangd": {
      	"command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
		"dart": {
			"command": "/home/traxys/.pub-cache/bin/dart_language_server",
			"args": [],
			"filetypes": ["dart"],
			"initializationOptions": {},
			"settings": {
				"dart": {
					"validation": {},
					"completion": {}
				}
			}
		},
		"golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod"],
			"filetypes": ["go"]
		},
		"haskell": {
			"command": "hie-wrapper",
			"rootPatterns": [
				".stack.yaml",
				"cabal.config",
				"package.yaml"
			],
			"filetypes": [
				"hs",
				"lhs",
				"haskell"
			],
			"initializationOptions": {
				"languageServerHaskell": {
					"hlintOn": true
				}
			}
		}
  },
  "java.errors.incompleteClasspath.severity": "ignore"
}
